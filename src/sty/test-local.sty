  }
  */

  LOCAL.val = 10.0 -- Not used
  
  -- Should work for all 6 matches (AB, AC, BA, BC, CA, CB)
  LOCAL.arrow = Arrow {
    startX = x.shape.x
    startY = x.shape.y
    endX = y.shape.x
    endY = y.shape.y
  }

  LOCAL.text = Text {
    string = "between"
  }
  
  LOCAL.betweenFn = encourage centerLabel(LOCAL.arrow, LOCAL.text)
}
