Point p {
    p.shape = Circle {
        r     = 20.0
        x     = 130.0
        y     = 180.0
        color = Colors.orange
        stroke-width = 0.0
    }

    p.text = Text { string = p.label }
    
    p.labelFn = encourage centerLabel(p.shape, p.text)
}
